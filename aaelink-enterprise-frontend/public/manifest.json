  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "AAELink Enterprise Dashboard"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "AAELink Mobile Interface"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Open main dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Open messages",
      "url": "/dashboard?tab=messages",
      "icons": [
        {
          "src": "/icons/shortcut-messages.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Calendar",
      "short_name": "Calendar",
      "description": "Open calendar",
      "url": "/dashboard?tab=calendar",
      "icons": [
        {
          "src": "/icons/shortcut-calendar.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/dashboard?tab=files",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "application/pdf": [".pdf"],
        "text/*": [".txt", ".md", ".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"],
        "application/vnd.ms-powerpoint": [".ppt", ".pptx"],
        "application/msword": [".doc", ".docx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+aaelink",
      "url": "/?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/dashboard?tab=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", "text/*"]
        }
      ]
    }
  }
}
