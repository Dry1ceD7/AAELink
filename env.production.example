# AAELink Production Environment Variables
# Copy to .env and fill in the values

# Domain Configuration
DOMAIN=your-domain.com

# Database
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis
REDIS_PASSWORD=your-secure-redis-password

# MinIO S3 Storage
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-secure-minio-secret-key

# Application Secrets
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
SESSION_SECRET=your-session-secret-key-minimum-32-characters

# Email Configuration (optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@your-domain.com

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Monitoring (optional)
SIGNOZ_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# SSL/TLS (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# File Upload Limits
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,md,jpg,jpeg,png,gif,webp,mp4,mov,avi

# Feature Flags
FEATURE_WEBAUTHN=true
FEATURE_REAL_TIME=true
FEATURE_FILE_SHARING=true
FEATURE_CALENDAR=true
FEATURE_ERP_INTEGRATION=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
NODE_ENV=production
WORKERS=auto
MAX_MEMORY=1024MB

# Security
HELMET_ENABLED=true
CORS_ORIGIN=https://your-domain.com
TRUST_PROXY=true
