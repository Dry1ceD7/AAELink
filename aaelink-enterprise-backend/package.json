{
  "name": "aaelink-enterprise-backend",
  "version": "1.2.0",
  "description": "AAELink Enterprise Backend - Fastify + tRPC + GraphQL API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "fastify": "^3.29.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/jwt": "^5.0.0",
    "@fastify/websocket": "^7.0.0",
    "@fastify/helmet": "^9.0.0",
    "@fastify/rate-limit": "^6.0.0",
    "@fastify/swagger": "^6.0.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/multipart": "^7.6.0",
    "@prisma/client": "^5.7.1",
    "@trpc/server": "^10.45.0",
    "@trpc/client": "^10.45.0",
    "zod": "^3.22.0",
    "bcrypt": "^5.1.0",
    "argon2": "^0.31.0",
    "jose": "^5.1.0",
    "socket.io": "^4.7.0",
    "uuid": "^9.0.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "winston": "^3.11.0",
    "minio": "^7.1.3",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/multer": "^1.4.0",
    "@types/uuid": "^9.0.0",
    "@types/lodash": "^4.14.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prisma": "^5.7.1",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
